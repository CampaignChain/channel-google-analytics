{% extends 'CampaignChainCoreBundle:Base:base.html.twig' %}

{% block body %}
<form action="{{ path('campaignchain_channel_google_analytics_connect_location') }}" method="POST">
<table class="table table-striped">
    <tr>
        <th></th>
        <th>Property ID</th>
        <th>Name</th>
        <th>URL</th>
    </tr>
    {% for profile in profiles %}

        <tr>
            <td>

                <input type="checkbox" name="google-analytics-property-id[]" value="{{ profile.accountId }}|{{ profile.webPropertyId }}" {%  if profile.webPropertyId in dbProfileIds %} disabled {% endif %}>
            </td>

            <td>{{ profile.webPropertyId }}</td>
            <td>{{ profile.name }}</td>
            <td>{{ profile.websiteUrl }}</td>
        </tr>
    {% endfor %}
</table>
<button class="btn btn-primary" type="submit">Connect Property</button>
</form>
{% endblock %}
